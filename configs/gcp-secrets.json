{
  "secrets": [
    {
      "name": "DISCORD_PUBLIC_KEY",
      "description": "Discord bot public key for signature verification",
      "required": true,
      "source": "Discord Developer Portal > General Information > Public Key",
      "used_by": ["proxy"]
    },
    {
      "name": "DISCORD_BOT_TOKEN",
      "description": "Discord bot token for API authentication",
      "required": true,
      "source": "Discord Developer Portal > Bot > Token",
      "used_by": ["proxy", "discord-registrar", "processor-draw", "processor-snapshot", "processor-canvas-state", "processor-stats", "processor-colors", "processor-pixel-info"]
    },
    {
      "name": "DISCORD_APPLICATION_ID",
      "description": "Discord application ID",
      "required": true,
      "source": "Discord Developer Portal > General Information > Application ID",
      "used_by": ["proxy", "discord-registrar"]
    },
    {
      "name": "DISCORD_CLIENT_ID",
      "description": "Discord OAuth2 client ID (usually same as APPLICATION_ID)",
      "required": false,
      "source": "Discord Developer Portal > OAuth2 > Client ID",
      "used_by": ["auth-service"]
    },
    {
      "name": "DISCORD_CLIENT_SECRET",
      "description": "Discord OAuth2 client secret",
      "required": false,
      "source": "Discord Developer Portal > OAuth2 > Client Secret",
      "used_by": ["auth-service"]
    },
    {
      "name": "DISCORD_REDIRECT_URI",
      "description": "OAuth2 redirect URI (e.g., https://guidon-xxx.ew.gateway.dev/auth/callback)",
      "required": false,
      "source": "Set after API Gateway deployment",
      "used_by": ["auth-service"]
    },
    {
      "name": "WEB_FRONTEND_URL",
      "description": "Web frontend service URL",
      "required": false,
      "source": "Set after web-frontend deployment",
      "used_by": ["auth-service"]
    },
    {
      "name": "USER_MANAGER_URL",
      "description": "User manager service URL",
      "required": false,
      "source": "Set after user-manager deployment",
      "used_by": ["proxy", "processors"]
    },
    {
      "name": "CANVAS_SERVICE_URL",
      "description": "Canvas service URL",
      "required": false,
      "source": "Set after canvas-service deployment",
      "used_by": ["processor-draw", "processor-snapshot", "processor-canvas-state", "processor-stats", "processor-colors", "processor-pixel-info"]
    }
  ]
}

